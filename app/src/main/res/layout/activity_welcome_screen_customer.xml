<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeMessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serviceTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Hello!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeMessageName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="You are logged in as customer."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/search_field_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/search_field_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:text="Search by service"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/search_field_service"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="SEARCH"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/search_field_hours"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="Search by branch hours"
        android:gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/search_field_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/search_field_hours"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Search by address"
        android:gravity="center_horizontal"
        />

    <ListView
        android:id="@+id/listViewBranches"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorAccent"
        android:textColor="#000000"
        android:textSize="18sp">
    </ListView>

</RelativeLayout>
